<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Animation for LevelChooserFragment -->
    <style name="LevelChooserAnimation" >
        <item name="android:windowExitAnimation">@anim/general_slideleft_out</item>
        <item name="android:windowEnterAnimation">@anim/general_slideleft_in</item>
    </style>
    <!-- Animation for BinaryConfirmFragemnt -->
    <style name="BinaryConfirmAnimation" >
        <item name="android:windowEnterAnimation">@anim/general_slideleft_in</item>
    </style>

</resources>
