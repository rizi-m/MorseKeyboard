<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.rizwanmahmood.morsekeyboard.activities.LevelsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/levels_btn_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/general_margin"
                    android:background="@drawable/tap_key"
                    android:text="1"
                    android:textColor="@color/colorPrimary" />

                <Button
                    android:id="@+id/levels_btn_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/general_margin"
                    android:background="@drawable/tap_key"
                    android:text="2"
                    android:textColor="@color/colorPrimary" />

                <Button
                    android:id="@+id/levels_btn_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/general_margin"
                    android:background="@drawable/tap_key"
                    android:text="3"
                    android:textColor="@color/colorPrimary" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/levels_btn_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/general_margin"
                    android:background="@drawable/tap_key"
                    android:text="4"
                    android:textColor="@color/colorPrimary" />

                <Button
                    android:id="@+id/levels_btn_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/general_margin"
                    android:background="@drawable/tap_key"
                    android:text="5"
                    android:textColor="@color/colorPrimary" />

                <Button
                    android:id="@+id/levels_btn_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/general_margin"
                    android:background="@drawable/tap_key"
                    android:text="6"
                    android:textColor="@color/colorPrimary" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/levels_btn_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/general_margin"
                    android:background="@drawable/tap_key"
                    android:text="7"
                    android:textColor="@color/colorPrimary" />

                <Button
                    android:id="@+id/levels_btn_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/general_margin"
                    android:background="@drawable/tap_key"
                    android:text="8"
                    android:textColor="@color/colorPrimary" />

                <Button
                    android:id="@+id/levels_btn_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/general_margin"
                    android:background="@drawable/tap_key"
                    android:text="9"
                    android:textColor="@color/colorPrimary" />
            </TableRow>

        </TableLayout>
    </ScrollView>
</RelativeLayout>
